{
  "name": "code-clipper",
  "displayName": "Code Clipper",
  "description": "Clip your code with your syntax highlighting and line number!",
  "version": "0.0.1",
  "publisher": "arom1a",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-clipper.clip-code",
        "title": "Clip Code"
      },
      {
        "command": "code-clipper.clip-code-as-plain-text",
        "title": "Clip Code as Plain Text"
      }
    ],
    "configuration": [
      {
        "title": "Code Clipper Configurations",
        "properties": {
          "code-clipper.puppeteerPath": {
            "type": "string",
            "description": "The path to puppeteer"
          },
          "code-clipper.clipSavingDirectory": {
            "type": "string",
            "description": "Config where to save the code clip to. If not set, the clips will be saved to the extension's storage directory.\nExamples values: `/Users/${username}/Downloads/` (MacOS), `` (Windows), `` (Linux)"
          },
          "code-clipper.openDirectoryAfterClipping": {
            "type": "boolean",
            "default": "true",
            "description": "Config whether to open the saving directory or not."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "~20.17.9",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "puppeteer-core": "^23.10.1"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arom1a/code-clipper/issues",
    "email": "f2940015504@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arom1a/code-clipper.git"
  },
  "homepage": "https://github.com/arom1a/code-clipper"
}
