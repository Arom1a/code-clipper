{
  "name": "code-clipper",
  "displayName": "Code Clipper",
  "description": "Clip your code with your syntax highlighting and line number!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-clipper.clip-code",
        "title": "Clip Code"
      },
      {
        "command": "code-clipper.clip-code-as-plain-text",
        "title": "Clip Code as Plain Text"
      },
      {
        "command": "code-clipper.clip-code-save-image-only",
        "title": "Clip Code Save Image Only"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "~20.17.9",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "puppeteer-core": "^23.10.1"
  }
}
